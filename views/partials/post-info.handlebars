    <article class="card">
        <div class = "card-header" >

            <h2>{{title}} </h2>

            <span> Posted by {{user.username}} on {{format_date createdAt}}</span>
        </div>
        {{#if post_comment}}
            <div class="card-body">
                {{post_comment}}
            </div>
        {{else}}
            
        {{/if}}
    </article>   